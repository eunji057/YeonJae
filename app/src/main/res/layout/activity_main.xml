<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="kr.hs.emirim.yeonjae0331.gume.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_main"
  >
    <LinearLayout
        android:layout_marginTop="130dp"
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:background="@android:color/transparent"
            android:id="@+id/airplane"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:maxHeight="350dp"
            android:maxWidth="350dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/air_06"
            />

        <ImageView
            android:background="@android:color/transparent"
            android:id="@+id/bird"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:maxHeight="350dp"
            android:maxWidth="350dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bird_06"
            />



    </LinearLayout>


    <LinearLayout
        android:paddingTop="140dp"
        android:paddingLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:background="@android:color/transparent"
            android:id="@+id/main_but1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:maxHeight="350dp"
            android:maxWidth="350dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bird_but"
           />

        <ImageButton
            android:background="@android:color/transparent"
            android:id="@+id/main_but2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:maxHeight="350dp"
            android:maxWidth="350dp"
            android:src="@drawable/air_but"
           />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="0dp"
        android:paddingLeft="60dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:background="@android:color/transparent"
            android:id="@+id/main_but3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:maxHeight="350dp"
            android:maxWidth="350dp"
            android:src="@drawable/read_but"
            />

        <ImageButton
            android:background="@android:color/transparent"
            android:id="@+id/main_but4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:maxHeight="350dp"
            android:maxWidth="350dp"
            android:src="@drawable/set_but"/>
    </LinearLayout>
</LinearLayout>
